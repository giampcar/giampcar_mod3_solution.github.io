body {
  font-size: 16px;
  color: #fff;
  background-color: Orange;
  font-family: "Comic Sans MS", Comic Sans, cursive;
}

/** HEADER **/
#header-nav {
  background-color: Gray;
  border-radius: 0;
  border: 0;
}

#collapsable-nav{
  margin-top: 0;
}


.navbar-brand {
  padding-top: 25px;
  padding-bottom: 50px;
}
.navbar-brand h1 { /* Restaurant name */
  color: Orange;
  font-size: 1.5em;
  text-transform: uppercase;
  font-weight: bold;
  text-shadow: 1px 1px 1px #222;
  margin-top: 0px;
  margin-bottom: 0px;
}



#nav-list {
  margin-top: 1%;
  magin-bottom: 1%;
}
#nav-list a {
  color: #951C49;
  text-align: center;
}
#nav-list a:hover {
  background: #E7E7E7;
}
#nav-list hr {
  
  width: 90%;
  margin-top:0;
  margin-bottom:0;
}


.navbar-header button.navbar-toggle, .navbar-header .icon-bar {
  border: 1px solid #61122f;
}
.navbar-header button.navbar-toggle {
  clear: both;
  margin-top: -30px;
}
/* END HEADER */




/* HOME PAGE */
.container-fluid .description {
  box-shadow: 0 0 50px #3F0C1F;
  border: 2px solid #3F0C1F;
 
}



#main-content p{
	
	text-align: center;
	float: auto;
	color: blue;
	font-size: 1.75em;
	font-weight: bold;
	margin-bottom: 10px;
	clear: both;
}

#main-content #descrizione {
	color: red;
	font-size: 0.75em;
	background-color: orange;
	text-align: justify;
	margin: 2%;
}





/********** Medium devices only **********/
@media min-width: 992px {

  /* Home Page */
  .container-fluid .description {
    background-color: orange;
    height: auto;
  }
  
      #Menu {
    margin-top: 5px;
	margin-bottom: 20px;
    font-size: 1.8em;
    letter-spacing: .4em;
		font-weight: bold;
    text-transform: uppercase;
  }
  /* End Home Page */
}

/********** Small devices only **********/
@media (min-width: 768px) and (max-width: 991.98px) {
  /* Home Page */
  .container-fluid .description {
   background-color: orange;
    height: auto;
  }
  
    #Menu {
    margin-top: 5px;
	margin-bottom: 20px;
    font-size: 1.35em;
    letter-spacing: .3em;
		font-weight: bold;
    text-transform: uppercase;
  }
  /* End Home Page */
}

/********** Extra small devices only **********/
@media (max-width: 767.98px) {
  /* Header */



  #collapsable-nav a { /* Collapsed nav menu text */
    font-size: 1.1em;
  }


  #Menu {
    margin-top: 5px;
	margin-bottom: 20px;
    font-size: 1.25em;
    letter-spacing: .3em;
		font-weight: bold;
    text-transform: uppercase;
  }
  /* End Header */

 
  /* Home Page */
  .container-fluid .description {
    margin-top: 30px;
    padding: 0;
  }
}

  #nav-list a:hover {
  background: #E7E7E7;
  margin: 0 5% 0 5%;
  }

/********** Super extra small devices Only :-) (e.g., iPhone 4) **********/
@media (max-width: 479px) {
  /* Header */
  .navbar-brand h1 { /* Restaurant name */
    padding-top: 5px;
    font-size: 6vw;
  }
  
    #Menu {
    margin-top: 5px;
	margin-bottom: 20px;
    font-size: 1.25em;
    letter-spacing: .2em;
		font-weight: bold;
    text-transform: uppercase;
  }
  
  #nav-list a:hover {
  background: #E7E7E7;
  margin: 0 5% 0 5%;
}
  /* End Header */
  
 }




